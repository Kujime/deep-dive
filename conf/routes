# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Send (user,password) to receive token
POST    /login                      controllers.Application.login()
# Invalidate token
POST    /logout                     controllers.Application.logout()

# Check if token is valid and get user id
GET    /ping                        controllers.Application.ping()

GET    /my/account                  controllers.Users.myAccountInfo()
GET    /users/:id                   controllers.Users.findOneById(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET    /webjars/*file              controllers.WebJarAssets.at(file)
GET    /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
